<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/fondo_apk_euroliga"
    tools:context=".menu_principal.MenuPrincipalFragment">

    <Button
        android:id="@+id/boton_jornadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jornadas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/boton_clasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clasificacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton_jornadas"
         />

</androidx.constraintlayout.widget.ConstraintLayout>